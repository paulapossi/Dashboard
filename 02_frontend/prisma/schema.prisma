generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

// --- DEINE MODELLE ---

model UniTask {
  id        String    @id @default(cuid())
  title     String
  isDone    Boolean   @default(false)
  deadline  DateTime?
  priority  String    @default("IMPORTANT")
  createdAt DateTime  @default(now())
}

model DailyLog {
  id                    String   @id @default(cuid())
  date                  DateTime @default(now())
  mainTask              String?
  goalDeepWorkMinutes   Int?
  actualDeepWorkMinutes Int      @default(0)
  focusLevel            Int      @default(0)
  distraction           String?
  outputProduced        Boolean  @default(false)
  topic                 String?
  understandingLevel    Int      @default(0)
  canExplain            Boolean  @default(false)
  technicalConcept      String?
  businessExplanation   String?
  talkedToSenior        Boolean  @default(false)
  realityCheckBusy      Boolean  @default(false)
  realityCheckAvoided   Boolean  @default(false)
  realWorldApplication  String?
}

model WeeklySkillStack {
  id                 String   @id @default(cuid())
  weekNumber         Int
  year               Int
  analysisSkill      String   @default("EQUAL")
  communicationSkill String   @default("EQUAL")
  structureSkill     String   @default("EQUAL")
  toolSkill          String   @default("EQUAL")
  createdAt          DateTime @default(now())
}

model WeeklySport {
  id         String   @id @default(cuid())
  weekNumber Int
  year       Int
  gym1       Boolean  @default(false)
  gym2       Boolean  @default(false)
  run1       Boolean  @default(false)
  run2       Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([weekNumber, year])
}

model WeeklyReading {
  id String @id @default(cuid())

  weekNumber Int

  year Int

  day1 Boolean @default(false)

  day2 Boolean @default(false)

  day3 Boolean @default(false)

  day4 Boolean @default(false)

  day5 Boolean @default(false)

  day6 Boolean @default(false)

  day7 Boolean @default(false)

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt

  @@unique([weekNumber, year])
}

model DailyNutrition {
  id        String   @id @default(cuid())
  date      DateTime @unique @default(now())
  protein   Boolean  @default(false)
  vitamins  Boolean  @default(false)
  water     Boolean  @default(false)
  sweets    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
